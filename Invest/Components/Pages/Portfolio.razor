@page "/Portfolio"

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>Portfolio</PageTitle>

<h2>Portfolio</h2>

<div class="container mt-4">
    <div class="row gap-3 gap-md-0">
        <div class="col-md-6">
            <a href="/Portfolio/ActiveInvestments">
                <div class="card text-center bg-primary text-white h-100">
                    <div class="card-body">
                        <h3 class="card-title">Active Investments</h3>
                        <p class="card-text">View your active investments.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6">
            <a href="/Portfolio/PastInvestments">
                <div class="card text-center bg-secondary text-white h-100">
                    <div class="card-body">
                        <h3 class="card-title">Past Investments</h3>
                        <p class="card-text">Review your past investment history.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>